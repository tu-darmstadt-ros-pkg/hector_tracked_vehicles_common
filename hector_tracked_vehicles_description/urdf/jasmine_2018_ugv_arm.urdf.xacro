      <axis xyz="0 0 1" />
      <limit lower="${-pi / 2}" upper="${pi / 2}" effort="${XM540_W270_max_effort}" velocity="${XM540_W270_max_velocity}" />
      <parent link="arm_yaw_link" />
      <child link="arm_pitch_link_0" />
