    <link name="gripper_finger_link_1">
      <visual>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
        <geometry>
          <mesh filename="package://hector_tracked_vehicles_description/meshes/jasmine_ugv/gripper/gripper_finger.stl" scale="-0.001 0.001 0.001" />
        </geometry>
        <material name="DarkGrey">
