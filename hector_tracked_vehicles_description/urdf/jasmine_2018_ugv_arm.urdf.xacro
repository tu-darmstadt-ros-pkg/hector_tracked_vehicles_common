        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
        <geometry>
          <mesh filename="package://hector_tracked_vehicles_description/meshes/jasmine_ugv/gripper/gripper_palm.stl" scale="0.001 0.001 0.001" />
        </geometry>
        <material name="DarkGrey">
          <color rgba="0.3 0.3 0.3 1" />
        </material>
      </visual>
      
      <collision>
        <origin xyz="0.0 0.0 0.0225" rpy="0.0 0.0 0.0" />
        <geometry>
          <box size="0.05 0.055 0.05" />
        </geometry>
      </collision>

      <collision>
        <origin xyz="-0.03 0.0 0.0325" rpy="0.0 0.0 ${pi/2}" />
