        </geometry>
      </collision>

      <collision>
        <origin xyz="0.03 0.02 0.04" rpy="${-pi/2} 0.0 ${pi/2}" />
        <geometry>
          <cylinder length="0.02" radius="0.028" />
        </geometry>
      </collision>
      
      <collision>
        <origin xyz="0.03 -0.02 0.04" rpy="${-pi/2} 0.0 ${pi/2}" />
        <geometry>
          <cylinder length="0.02" radius="0.028" />
        </geometry>
      </collision>
	  
      <inertial>
      
        <origin xyz="0.00018 0.00265 0.03088" rpy="0.0 0.0 0.0" />
        <mass value="0.155" />
        <inertia ixx="0.000058905"    ixy="-0.000001039"    ixz="-0.000015872"
                                      iyy="0.000129197"    iyz="-0.000002084"
                                                          izz="0.000106087" />
