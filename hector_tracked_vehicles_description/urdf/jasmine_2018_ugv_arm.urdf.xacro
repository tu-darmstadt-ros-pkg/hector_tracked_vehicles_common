                                    iyy="0.000003471"     iyz="0.000000621"
                                                          izz="0.00000707" />
      </inertial>
    </link>

    <joint name="gripper_palm_joint" type="fixed">
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
      <parent link="arm_roll_link" />
      <child link="gripper_palm_link" />
