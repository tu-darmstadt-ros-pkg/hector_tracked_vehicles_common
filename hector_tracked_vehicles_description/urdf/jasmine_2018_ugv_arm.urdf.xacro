    </link>

    <joint name="arm_yaw_joint" type="revolute">
      <origin xyz="0.0 0 0.036" rpy="0.0 0.0 ${pi / 2}" />
      <axis xyz="0 0 1" />
      <limit lower="${-pi / 2}" upper="${pi / 2}" effort="${XM430_W350_max_effort}" velocity="${XM430_W350_max_velocity}" />
      <parent link="arm_base_link" />
      <child link="arm_yaw_link" />
      <dynamics friction="${joint_friction}" damping="${joint_damping}" />
    </joint>

    <link name="arm_yaw_link">
