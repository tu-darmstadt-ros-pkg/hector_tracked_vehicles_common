    </link>

    <joint name="arm_pitch_joint_1" type="revolute">
      <origin xyz="0.026 0.2517 0.0" rpy="0.0 0.0 ${-pi}" />
      <axis xyz="0 0 1" />
      <limit lower="${-pi/2}" upper="${pi/2}" effort="${XM430_W350_max_effort}" velocity="${XM430_W350_max_velocity}" />
      <parent link="arm_pitch_link_0" />
      <child link="arm_pitch_link_1" />
      <dynamics friction="${joint_friction}" damping="${joint_damping}" />
