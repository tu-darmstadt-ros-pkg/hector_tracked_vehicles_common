    <joint name="gripper_servo_joint" type="revolute">
      <origin xyz="0.024 0.01612 0.01625" rpy="${pi/2} 0.0 ${pi / 2}" />
      <axis xyz="0 0 1" />
      <limit lower="${-M_PI/2}" upper="${112 * M_PI/ 180}" effort="${XM430_W350_max_effort}" velocity="${XM430_W350_max_velocity}" />
      <parent link="gripper_palm_link" />
